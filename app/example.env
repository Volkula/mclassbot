BOT_TOKEN=1234567890:REPLACE_ME_WITH_REAL_TOKEN
# Имя бота без @ (нужно для формирования ссылок вида https://t.me/<BOT_USERNAME>)
BOT_USERNAME=mclassregbot

# URL мини-приложения (опционально, можно оставить пустым)
WEBAPP_URL=

# Подключение к базе данных
# SQLite по умолчанию (файл сохраняется в volume для персистентности):
DATABASE_URL=sqlite:///./data/event_registration.db
# Пример для PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/viraj

# Хост и порт API (FastAPI)
API_HOST=0.0.0.0
API_PORT=8000

# Telegram ID администраторов, через запятую (без пробелов)
# Например: 111111111,222222222
ADMIN_USER_IDS=

# Часовой пояс приложения (используется для всех расчётов времени)
# По умолчанию Europe/Moscow (GMT+3)
TIMEZONE=Europe/Moscow


